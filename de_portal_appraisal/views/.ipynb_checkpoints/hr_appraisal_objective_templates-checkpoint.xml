<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    
    <template id="portal_layout" name="Portal layout: appraisal menu entry" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'appraisal' or appraisal" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not appraisal else ''}">
                <a t-if="appraisal" t-attf-href="/appraisal/objectives?{{ keep_query() }}">Appraisals Objective</a>
                <t t-else="">Appraisals Objective</t>
            </li>
            <li t-if="appraisal" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="appraisal.id"/>
            </li>
        </xpath>
    </template>

    
    
    
    <template id="portal_my_home" name="Show appraisals / fifty" customize_show="True" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry"  groups="de_portal_appraisal.group_appraisal">
                <t t-set="title">Appraisals Objective</t>
                <t t-set="url" t-value="'/appraisal/objectives'"/>
                <t t-set="placeholder_count" t-value="'appraisal_count'"/>
            </t>
        </xpath>  
    </template>
    
    
    

    <template id="portal_appraisal_objectives" name="Appraisals Objective">
         <t t-set="foo" t-value="2 + 1"/>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Appraisals Objective</t>
            </t>
            <t t-if="not grouped_appraisals">
                <div class="alert alert-warning mt8" role="alert">
                    There are no Appraisals Objective.
                </div>
            </t>
            <t t-if="grouped_appraisals">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_appraisals" t-as="appraisals">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">No#</th>
                                 <th class="text-left">Employee</th>
                                <th class="text-left">Description</th>
                                <th class="text-left">Year</th>
                                <th class="text-left">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="appraisals" t-as="appraisal">   
                            <t t-if="appraisal.employee_id.user_id.id == uid">   
                                
                                <tr>
                                      <td class="text-left">
                                        #<span t-esc="appraisal.id" />
                                    </td>
                                     <td>
                                        <a t-attf-href="/appraisal/objective/#{appraisal.id}?{{ keep_query() }}"><span t-field="appraisal.employee_id.name"/></a>
                                    </td>
                                     <td class="text-left">
                                        <span t-esc="appraisal.description" />
                                    </td>
                                    
                                     
                                    <td class="text-left">
                                        <span t-esc="appraisal.objective_year" />
                                    </td>
                                   
                                    <td class="text-left">
                                        <t t-if="appraisal.state == 'draft'">
                                            <i class="badge badge-pill badge-info" >Draft</i>
                                        </t>
                                        <t t-if="appraisal.state == 'waiting'">
                                            <i class="badge badge-pill badge-info" >Submitted</i>
                                        </t>
                                        <t t-if="appraisal.state == 'confirmed'">
                                            <i class="badge badge-pill badge-info" >Approved</i>
                                        </t>
                                       
                                    </td>
                                    
                                    
                                 
                                    
                                    
                            
                                </tr>
                            </t>
                            </t>    

                            <tr>
                                <div>
                                    <t class="col-lg-7 col-md-8" >
                                        <a href="/appraisal/objective/create/" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">Create</div> </a> 
                                    </t>
                                </div>
                            </tr> 
                        </tbody>
                    </t>
                </t>
            </t>   
        </t>
    </template>
     
    <template id="portal_appraisal_objective" name="Appraisal ">
        <t t-call="portal.portal_layout">
             <t t-set="o_portal_fullwidth_alert">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=hr.appraisal.objective&amp;id=%s&amp;view_type=form' % (appraisal.id)"/>
                </t> 
            </t>
          
            <div id="optional_placeholder"></div>
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div id="optional_placeholder"></div>
                    <div class="container">
                      <div class="card">
                        <div class="card-header">
                             <div>
                                 <t t-if="appraisal.state == 'draft' ">
<!--                                     <t class="col-lg-7 col-md-8" >
                                        <a t-attf-href="/expense/edit/#{appraisal.id}?" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">Edit</div> </a> 
                                    </t> -->
                                 </t>   
                                </div>
                               <div>
                               
                                </div>
                                <div class="row">
                                    <div class="col-lg-11">
                                        <h5 class="d-flex mb-1 mb-md-0 row">
                                            <small class="text-muted d-none d-md-inline"> (#<span t-field="appraisal.id"/>)</small>
                                            <div class="col-3 col-md-3 text-left">
                                              <small class="text-right">Status:</small>

                                                    <span t-field="appraisal.state" class=" badge badge-pill badge-info" title="Current stage of this appraisal"/>

                                            </div>
                                        </h5>
                                    </div>
                                    
                                    
                                    <t t-set="prev_record" t-value="1" /> 
                                    <t t-set="next_record" t-value="2" /> 
                                    <div style="float:right; text-align:right; width:0ox; margin-right:0px;" class=" btn-group col-lg-1" role="group">
                                    <h5>  
                                        <t t-if="pre_id">
                                            <a role="button"  t-attf-href="/appraisal/pre/#{appraisal.id}?" ><i style="margin-right:10px; align:right" class="fa fa-chevron-left" role="img" aria-label="Previous" title="Previous"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="margin-right:10px; align:right; color:#B8B7B0" class="fa fa-chevron-left" aria-label="Previous" title="Previous"></i></a>

                                        </t>
                                        <t t-if="next_id">
                                            <a role="button" t-attf-href="/appraisal/next/#{appraisal.id}?" ><i class="fa fa-chevron-right" role="img" aria-label="Next" title="Next"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="color:#B8B7B0" class="fa fa-chevron-right" aria-label="Next" title="Next"></i></a>
                                        </t>
                                    </h5>
                                </div>
                            </div>
                          </div>
                        </div>
                    </div>
                </t>
               <t t-set="card_body">          
                    <div class="row mb-4">
                       
                       
                    </div>
                    <div class="row mb-4">
                         <div class="col-12 col-md-6 pb-2">
                            <div class="row">
                                <div class="col-md-6"> <strong>Employee : </strong>
                                    <t t-if="appraisal.employee_id">
                                        <span t-esc="appraisal.employee_id.name"/>
                                    </t>
                                </div>
                            </div>
                             <div class="row">            
                                <div class="col-md-6"> <strong>Year : </strong>
                                    <t t-if="appraisal.objective_year">
                                        <span t-esc="appraisal.objective_year"/>
                                    </t>
                                </div>
                                  
                            </div>
                            <t t-call="portal.portal_table">
                   
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                
                                <th class="text-left">Objective</th>
                                <th class="text-left">Weightage</th>
                                <th class="text-left">Priority</th>
                            </tr>
                        </thead>
                        <tbody>
                        <t t-foreach="appraisal.objective_lines" t-as="line">   
                                
                                <tr>
                                     
                                     <td class="text-left">
                                        <span t-esc="line.objective" />
                                    </td>
                                    
                                     <td class="text-left">
                                        <span t-esc="line.weightage" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="line.priority" />
                                    </td>
                            
                                </tr>
                            </t>
                           

                           
                        </tbody>
                    </t> 
                  
                             
                             
                        </div>

                    </div> 
                   
                  

                </t> 
            </t>
            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.message_thread">
                    <t t-set="object" t-value="appraisal"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>
    
    
    
         <template id="create_appraisal_objective" name="Appraisal Objective Request">
        <t t-call="portal.portal_layout">
               <div id="wrap">
                            <div class="oe_structure" data-oe-model="ir.ui.view" data-oe-id="2052" data-oe-field="arch" data-oe-xpath="/t[1]/t[1]/div[1]/div[1]">
                                <section class="s_title parallax s_parallax_is_fixed bg-white-100 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/de_portal_appraisal/static/description/eb1.jpg'); background-position: 50% 0;"></span>
                                    <div class="o_we_bg_filter bg-white-50"></div>
                                    <div class="container">
                                        <h1 style="margin-left:10px">Appraisal Objective</h1>
                                    </div>
                                </section>
                            </div>
                         
                   
                           <t t-call="portal.portal_table"   id="optionTableobjective">
                           
                        <thead>
                            
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">Objective</th>
                                <th class="text-left">Weightage</th>
                                <th class="text-left">Priority</th>
                            </tr>
                            
                        </thead>
                        <tbody>
                            <tr>
                            
                            </tr>
                            
                                
                        <form id="portal_appraisal_objective_form_line" data-toggle="validator" action="/appraisal/objective/line/save">
                                
                                <tr>
                                   
                                     <td > 
                                       <input type="char" class="form-control s_website_form_input" name="objective" required="True"/>

                                    </td>
                                    
                                     <td class="text-left">
                                        <input type="integer" class="form-control s_website_form_input" name="weightage" required="True"/>
                                    </td>
                                    <td class="text-left">
                                         <select  id="priority" class="form-control  s_website_form_input" name="priority" >
                                                <option value="low">Low</option>
                                                <option value="medium">Medium</option>
                                                <option value="high">High</option>
                                                <option value="very_high">Very High</option>
                                         </select>    
                                             
                                    </td>
                                   
                                        <td id="submit_1"   class="new">
                                         <div class="form-group col-12 s_website_form_submit" data-name="Submit Button Line">
                                            <div style="width: 200px;" class="s_website_form_label"></div>
                                            <button type="submit" class="btn btn-primary pull-left" id="submit_line">Add</button>
                                            <span id="s_website_form_result"></span>
                                         </div>
                                         </td>
                                      
                                </tr>
                                </form> 
                                 <tr>                                
                            </tr>
                            
                        </tbody>
                </t>
                   
                   
                     <form id="portal_appraisal_objective_form" data-toggle="validator" action="/appraisal/objective/save">

                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                   
                                    <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="appraisal1">
                                                <span class="s_website_form_label_content">Employee</span>
                                                <span class="s_website_form_mark"> *</span>

                                            </label>
                                            <div class="col-sm">
                                            
                                                <select class="form-control  o_website_form_input" name="employee_id" readonly="1" required="1">
                                                                    <t t-foreach="employees" t-as="emp">
                                                                        <option t-att-value="emp.id">
                                                                            <t t-esc="emp.name"    />
                                                                        </option>
                                                                    </t>
                                                                </select>
                                            </div>
                                        </div>
                                    </div>
                               
                                   
                                    <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="text" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="appraisal">
                                                <span class="s_website_form_label_content">Description</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <textarea id="description" class="form-control s_website_form_input" name="description" required=""></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="text" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="appraisal5">
                                                <span class="s_website_form_label_content">Objective Year</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <select  id="objective_year" class="form-control  s_website_form_input" name="objective_year" >
                                                <option value="2020">2020</option>
                                                <option value="2021">2021</option>
                                                <option value="2022">2022</option>
                                                <option value="2023">2023</option>
                                                <option value="2024">2024</option>
                                                <option value="2025">2025</option>
                                                <option value="2026">2026</option>
                                                <option value="2027">2027</option>
                                                <option value="2028">2028</option>
                                                <option value="2029">2029</option>
                                                <option value="2030">2030</option>
                                                <option value="2031">2031</option>
                                                <option value="2032">2032</option>
                                                <option value="2033">2033</option>
                                                <option value="2034">2034</option>
                                                <option value="2035">2035</option> 
                                                <option value="2036">2036</option>
                                                <option value="2037">2037</option>
                                                <option value="2038">2038</option>
                                                <option value="2039">2039</option>
                                                <option value="2040">2040</option>     
                                         </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                        <div style="width: 200px;" class="s_website_form_label"></div>
                                        <button type="submit" class="btn btn-primary pull-left">Submit</button>
                                        <span id="s_website_form_result"></span>
                                    </div>
                                </div>
                            </form>
          
            
            <br/>
            <br/>
            
            <t t-call="portal.portal_table"   id="optionTableappraisal1">
                           
                        <thead>
                            
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left"></th>
                                <th class="text-left"></th>
                                <th class="text-left"></th>
                            </tr>
                            
                        </thead>
                        <tbody>
                           
                            
                                
                            <t t-foreach="appraisal_objective_list" t-as="emp_site"> 
                                <tr>
                                   
                                    <td>
                                      <span t-esc="emp_site['objective']" />

                                    </td>
                                    
                                     <td class="text-left">
                                      <span t-esc="emp_site['weightage']" />
                                    </td>
                                    
                                    <td class="text-left">
                                      <span t-esc="emp_site['priority']" />
                                    </td>                                   
                                      
                                 </tr>
                            </t>
                        </tbody>
                </t>
            </div>    
        </t>
    </template>
    
    
    
    
          
    
    
    
    
    
    
    



    
      <template id="de_portal_appraisal.appraisal_submited" name="Appraisal  Received">
        <t t-call="portal.portal_layout">
            <div id="wrap" class="oe_structure oe_empty">
                <div class="container">
                    <div class="row">
                        <t t-if="request.session.get('form_builder_model_model', '') == 'hr.appraisal.objective'">
                            <t t-set="appraisal" t-value="request.portal._website_form_last_record().sudo()"/>
                        </t>
                        <h1 class="text-center"><i class="fa fa-check-circle fa-2x text-success" role="img" aria-label="Success" title="Success"/></h1>
                        <t t-if="appraisal">
                            <h1 class="text-center">Your appraisal Request Number is <a t-if="request.session.uid" t-attf-href="/my/timeoff/page/#{leave.id}">#<span t-field="appraisal.id"/></a><t t-if="not request.session.get('uid')">#<span t-field="appraisal.id"/></t>.</h1>
                        </t>
                        <h1 class="text-center">Thank you for submitting your Appraisal request!</h1>
                    </div>
                </div>
            </div>
         </t>
    </template>
    
      <template id="de_portal_appraisal.re_appraisal_submited" name="Expense Received">
        <t t-call="portal.portal_layout">
            <div id="wrap" class="oe_structure oe_empty">
                <div class="container">
                    <div class="row">
                        <t t-if="request.session.get('form_builder_model_model', '') == 'hr.expense'">
                            <t t-set="expense" t-value="request.portal._website_form_last_record().sudo()"/>
                        </t>
                        <h1 class="text-center"><i class="fa fa-check-circle fa-2x text-success" role="img" aria-label="Success" title="Success"/></h1>
                        <t t-if="expense">
                            <h1 class="text-center">Your Expense Request Number is <a t-if="request.session.uid" t-attf-href="/my/timeoff/page/#{leave.id}">#<span t-field="expense.id"/></a><t t-if="not request.session.get('uid')">#<span t-field="expense.id"/></t>.</h1>
                        </t>
                        <h1 class="text-center">Thank you for Re-Submitting your Expense request!</h1>
                    </div>
                </div>
            </div>
         </t>
    </template>
    
    

</odoo>


