<odoo>
    <data>
        <record id="paperformat_custom" model="report.paperformat">
            <field name="name">Employee Experience</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        
<!--         <record id="employee_dob_pdf" model="ir.actions.report.xml">

             <field name="paperformat_id" ref="paperformat_custom"/>

        </record> -->
        
        <template id="employee_experience_pdf">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="header">
                    </div>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="text-left">
                            <div class="row" style="margin-top:0 !important;">
                                <div class="col-3">
                                    <img style="text-align:left;" src='/web/binary/company_logo'/>
                                </div>
                                <div class="col-6">
                                    <h1 style="font-size:20px;color:blue;"><strong t-esc="employees[0]['company']"/></h1>
                                    <br></br>
                                    <a style="font-weight:bold;font-size:20px;color:blue;">Employee's Experience Report</a>
                                </div>
                            </div>
                        </div>
                       <div>
                        <br/>           
                        <t t-set="e_type" t-value="[]"/>
                        <t t-foreach="employees" t-as="e">
                            <t t-set="e_type" t-value="e_type+[e['emp_type']]"/>
                        </t>
                        <t t-foreach="set(e_type)" t-as="e">
                            <div style="page-break-after:avoid;"/>
                            <div><span t-esc="e" style="font-size:50px;margin-top: 500px;line-height: 200%"/></div>
                            <table class="table table-condensed" style="border: 1px solid black;">
                                <thead>
                                    <tr>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Sr. #</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Company</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Emp #</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Name</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Designation</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Grade</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Department</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">DOJ</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Years</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Months</b>
                                        </th>
                                        <th style="border: 1px solid black">
                                            <b style="color:black">Days</b>
                                        </th>

                                    </tr>
                                </thead>
                                <t t-foreach="employees" t-as="em">
                                    <t t-if="e==em['emp_type']">
                                        <tbody class="invoice_tbody">
                                            <tr style="border: 1px solid black">
                                                
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['sr_no']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['company']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['emp_code']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['name']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['designation']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['grade']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['department']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['doj']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['years']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['months']"/>
                                               </td>
                                               <td style="border: 1px solid black">
                                                   <span t-esc="em['days']"/>
                                               </td>
                                           </tr>
                                        </tbody>
                                    
                                    </t>
                                </t>
                            </table>
                            <div style="page-break-after:always;margin-top: 500px;line-height: 200%"/>
<!--                             <div style='clear:both;'></div> -->
                        </t>
                       </div>
                    </div>
                </t>
            </t>
        </template>
    </data>s
</odoo>
