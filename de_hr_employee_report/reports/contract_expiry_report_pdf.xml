<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="contract_pdf_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="text-left">
                            <h3 class="text-center">Contract Expiry Report</h3>
                            <div>
                                <b>
                                    Expire Before:
                                </b>
                                <span t-esc="data['date_expire']"/>
                                <br/>
                                <b>Locations:</b>
                                <span t-esc="location"/>
                            </div>
                        </div>
                        <div>
                            <table class="table table-sm table-reports">
                                <thead>
                                    <tr>
                                        <th>EMP Code</th>
                                        <th>Name</th>
                                        <th>Location</th>
                                        <th>Department</th>
                                        <th>Employee Type</th>
                                        <th>Date of Joining</th>
                                        <th>Contract Expiry</th>
                                    </tr>
                                </thead>
                                <t t-foreach="active_contract" t-as="o">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong t-esc="o.employee_id.emp_number"/>
                                            </td>
                                            <td>
                                                <span t-esc="o.employee_id.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="o.employee_id.work_location_id.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="o.employee_id.department_id.name"/>
                                            </td>
                                            <td>
                                                <span t-if="o.employee_id.emp_type == 'permanent'">Permanent</span>
                                                <span t-if="o.employee_id.emp_type == 'contractor'">Contractor</span>
                                                <span t-if="o.employee_id.emp_type == 'freelancer'">Freelancer</span>
                                                <span t-if="o.employee_id.emp_type == 'inter'">Intern</span>
                                                <span t-if="o.employee_id.emp_type == 'part_time'">Part Time</span>
                                                <span t-if="o.employee_id.emp_type == 'project_based'">Project Based
                                                    Hiring
                                                </span>
                                                <span t-if="o.employee_id.emp_type == 'outsource'">OutSource</span>
                                            </td>
                                            <td>
                                                <span t-esc="o.employee_id.date"/>
                                            </td>
                                            <td>
                                                <span t-esc="o.date_end"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </t>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
