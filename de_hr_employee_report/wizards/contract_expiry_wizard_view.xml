<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="contract_expiry_wizard_view" model="ir.ui.view">
        <field name="name">contract.expiry.wizard.report</field>
        <field name="model">contract.expiry.wizard</field>
        <field name="arch" type="xml">
            <form string="Contract Expiry">
                <group>
                    <field name="date_expire" required="1"/>
                </group>
                <group>
                    <field name="location_id" widget="many2many_tags"/>
                </group>

                <footer>
                    <button name="action_gnerate_excel" type="object" string="Create Excel Report"
                            class="oe_highlight"/>
                    <button name="action_gnerate_pdf" type="object" string="Create PDF Report" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_expiry_wizard" model="ir.actions.act_window">
        <field name="name">Contract Expiry Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.expiry.wizard</field>
        <field name="view_id" ref="contract_expiry_wizard_view"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
