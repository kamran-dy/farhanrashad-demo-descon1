<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="cost_center_distribution_wizard_view" model="ir.ui.view">
        <field name="name">cost.center.distribution.report</field>
        <field name="model">cost.center.distribution</field>
        <field name="arch" type="xml">
            <form string="Cost Center Distribution">
                <group>
                    <field name="employee_type_ids"  widget="many2many_tags"/>
                    <field name="grade_type_ids"  widget="many2many_tags"/>
                </group>
                <group>
                    <field name="location_ids" widget="many2many_tags"/>
                    <field name="cost_center_ids" widget="many2many_tags"/>
                </group>

                <footer>
                   <button name="action_gnerate_excel" type="object" string="Create Excel Report"
                           class="oe_highlight"/>
                    <button name="action_generate_pdf" type="object" string="Print PDF" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cost_center_distribution_wizard" model="ir.actions.act_window">
        <field name="name">Cost Center Distribution Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cost.center.distribution</field>
        <field name="view_id" ref="de_hr_employee_report.cost_center_distribution_wizard_view"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>