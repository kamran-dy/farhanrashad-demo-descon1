<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="employee_dob_wizard_view" model="ir.ui.view">
        <field name="name">employee.dob.report</field>
        <field name="model">employee.dob</field>
        <field name="arch" type="xml">
            <form string="Employee DOB Wizard">
                <group>
                    <field name="company_ids" widget="many2many_tags"/>
                </group>

                <footer>
                    <button name="action_generate_pdf" type="object" string="Print PDF" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dob_wizard" model="ir.actions.act_window">
        <field name="name">DOB Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.dob</field>
        <field name="view_id" ref="de_hr_employee_report.employee_dob_wizard_view"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>