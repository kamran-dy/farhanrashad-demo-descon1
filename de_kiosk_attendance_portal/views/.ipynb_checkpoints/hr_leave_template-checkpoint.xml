                              $("#leavecategory").change(function(){
                                var leavecategoryval = $( "#leavecategory" ).val();
                                if ( leavecategoryval === "day" ) {
                                    $("#custom_hours1").hide();
                                    $("#custom_hours2").hide();
                                    $("#half_day1").hide();
                                    $("#half_day2").hide();
                                   $("#day_1").show();
                                    $("#day_2").show();
                                  }
                                if ( leavecategoryval === "half_day" ) {
                                    $("#custom_hours1").hide();
                                    $("#custom_hours2").hide();
                                    $("#day_1").hide();
                                    $("#day_2").hide();
                                    $("#half_day1").show();
                                    $("#half_day2").show();
 
                                  }
                               if ( leavecategoryval === "hours" ) {
                                    $("#half_day1").hide();
                                    $("#half_day2").hide();
                                    $("#day_1").hide();
                                    $("#day_2").hide();
                                    $("#custom_hours1").show();
                                    $("#custom_hours2").show();
                                  }
                                
                              });
                              
                            }); 
                        </script>
                   
                   
