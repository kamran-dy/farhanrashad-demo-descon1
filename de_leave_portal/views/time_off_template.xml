<?xml version="1.0" encoding="utf-8"?>



<odoo>

    
    
    
    <template id="portal_layout" name="Portal layout: timeoff menu entry" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'timeoffs' or timeoff" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not timeoff else ''}">
                <a t-if="timeoff" t-attf-href="/my/timeoffs?{{ keep_query() }}">Leaves</a>
                <t t-else="">Leaves</t>
            </li>
            <li t-if="timeoff" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="timeoff.name"/>
            </li>
        </xpath>
    </template>

    
    
    

    
    <template id="portal_my_home" name="Show timeoffs / fifty" customize_show="True" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Time Off</t>
                <t t-set="url" t-value="'/my/timeoffs'"/>
                <t t-set="placeholder_count" t-value="'timeoff_count'"/>
            </t>
        </xpath>
    </template>

    
    
    
    
