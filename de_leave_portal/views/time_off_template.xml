    <template id="portal_my_timeoff" name="My Time Off">
        <t t-call="portal.portal_layout">
             <t t-set="o_portal_fullwidth_alert" groups="de_leave_portal.group_time_off">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=hr.leave&amp;id=%s&amp;view_type=form' % (timeoff.id)"/>
                </t>
            </t>
            <div id="optional_placeholder"></div>
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                  <div id="optional_placeholder"></div>
                    <div class="container">
                      <div class="card">
                        <div class="card-header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="timeoff.name" class="col-7 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="timeoff.id"/>)</small>
                                <div class="col-md-3  text-right">
                                    <small class="text-right">Stage:</small>
                                    <span t-field="timeoff.state" class=" badge badge-pill badge-info" title="Current stage of this Timeoff"/>
                                </div>
                                
                                 <div class="col-md-1  text-right">
                                        <t t-if="pre_id">
                                            <a role="button"  t-attf-href="/timeoff/pre/#{timeoff.id}?" ><i style="margin-right:10px; align:right" class="fa fa-chevron-left" role="img" aria-label="Previous" title="Previous"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="margin-right:10px; align:right; color:#B8B7B0" class="fa fa-chevron-left" aria-label="Previous" title="Previous"></i></a>

                                        </t>
                                        <t t-if="next_id">
                                            <a role="button" t-attf-href="/timeoff/next/#{timeoff.id}?" ><i class="fa fa-chevron-right" role="img" aria-label="Next" title="Next"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="color:#B8B7B0" class="fa fa-chevron-right" aria-label="Next" title="Next"></i></a>
                                        </t>
                                </div>
                                    </h5>
                                </div>
                            </div>
                          </div>
                        </div>
                    </div>
                </t>
               <t t-set="card_body">          
                  
                     
                        <div class="row">
                                <div class="col-md-6"> <strong>Employee : </strong>
                                    <t t-if="timeoff.name">
                                        <span t-esc="timeoff.employee_id.name"/>
                                    </t>
                                </div>
                            
                                 <div class="col-md-6"> 
                                    <strong>Leave Type : </strong>
                                    <t t-if="timeoff.id">
                                        <span t-esc="timeoff.holiday_status_id.name"/>
                                    </t>
                                </div>  
                        </div>       
                    
                        <br/><br/>
                   <div class="row"> 
                                  
                             <div class="col-md-6"> <strong>Start Date : </strong>
                                <t t-if="timeoff.name">
                                     <span t-esc="timeoff.date_from"/>
                                 </t>
                             </div>
                            
                                        
                                <div class="col-md-6"> <strong>End Date : </strong>
                                    <t t-if="timeoff.id">
                                        <span t-esc="timeoff.date_to"/>
                                    </t>
                                </div>
                            </div>
                   
                    <div class="row"> 
                        <div t-attf-class="col-12 col-lg-12  mb-md-0 ">
                            <hr class="mb-1"/>
                            <div class="d-flex my-2">
                                <strong>Description</strong>
                            </div>
                            <t t-if="timeoff.name">                                        
                                <div class="py-1 px-2 bg-100 small" t-field="timeoff.name"/>
                            </t>
                        </div> 
                    </div>
<!--                    <div class="row"> 
                       <t t-if = "timeoff.state == 'confirm'">

                        <div class="offset-md-10 col-md-1">
                            <a t-attf-href="/timeoff/ccpt/#{timeoff.id}?"><i  class="btn btn-primary">Approve</i></a>
                        </div>                  
                        <div class="col-md-1">
                            <a t-attf-href="/timeoff/rjct/#{timeoff.id}?"><i class="btn btn-warning">Refuse</i></a>                   
                        </div>
                            
                         </t>
                      
                    </div> -->
                </t> 
            </t>

            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.message_thread">
                    <t t-set="object" t-value="timeoff"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>


    <template id="create_timeoff" name="My creat">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
        
                <t t-call="portal.portal_table">
                    <thead>
                            <tr>
                                <th class="text-left">Create Time Off from here. Good Luck</th>
                            </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                  
                                <div class="container">
                                        <div class="row">
                                            <div class="col-md-8 col-xs-12 col-md-offset-2 sell-page-contact">
                                                <form id="TimeOffForm" data-toggle="validator" action="/my/timeoff/save" class="mt32">
                                                    
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                                <strong class="d-block mb-2">Leave Type:</strong>
                                                                 <select class="form-control  o_website_form_input" name="leave_type_id">
                                                                    <t t-foreach="leave_type" t-as="type">
                                                                        <option t-att-value="type.id">
                                                                            <t t-esc="type.name"/>
                                                                        </option>
                                                                    </t>
                                                                </select>  
                                                        </div>
                                                        <div style="float:right;"  class="col-xl">
                                                                <strong class="d-block mb-2">Employee:</strong>
                                                                 <select class="form-control  o_website_form_input" name="employee_id">
                                                                    <t t-foreach="employees" t-as="emp">
                                                                        <option t-att-value="emp.id">
                                                                            <t t-esc="emp.name"/>
                                                                        </option>
                                                                    </t>
                                                                </select> 
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div  class="col-xl">
                                                                <strong class="d-block mb-2">Date start:</strong>
                                                                <input name="date_start" type="date" required="required" class="form-control o_website_form_input"/>
                                                        </div>
                                                        <div style="float:right;"  class="col-xl">
                                                                <strong class="d-block mb-2">Date End:</strong>
                                                            <input name="date_end" type="date" required="required" class="form-control o_website_form_input"/>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label for="environment">Description:</label>
                                                            <input name="descr" type="text" class="form-control o_website_form_input"/>
                                                    </div>
                                                    
                                                    <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                        <div class="col-md-2">
                                                            <button type="submit"  class="btn btn-primary pull-left">Create</button>
                                                        </div>
                                                        <div class="col-md-7">
                                                            <t t-if="success_flag" t-call="portal.portal_docs_entry">
                                                                <t t-set="title">Your Time off hass been Saved Successfully</t>
                                                            </t>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <a href="/my/timeoffs"><div class="btn btn-warning pull-right" style="float:right; height:35px;line-height:100%;">All Timeoffs</div></a> 
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>

                                        </div>
                                    </div>
                            </td>
                        </tr>
                      
                    </tbody>
                </t>
            </t>
       
    </template> 

</odoo>


